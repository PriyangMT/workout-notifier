# Copy this to .env and fill values
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Twilio WhatsApp sandbox sender. Usually 'whatsapp:+14155238886' or the number Twilio assigns.
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Comma-separated list of recipients (you + spouse). Must *join* the Twilio WhatsApp sandbox once.
WHATSAPP_TO_LIST=whatsapp:+91XXXXXXXXXX,whatsapp:+91YYYYYYYYYY

# 24h format (IST) for daily schedule. e.g., 07:00 for 7 AM.
SEND_TIME_IST=07:00
